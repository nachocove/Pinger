{
    "aws_config": {
        "region_name": "us-west-2",
        "zones": ["us-west-2a"]
    },
    "misc" : {
        "jumphost": ""
    },
    "vpc_config": {
        "name": "ProdPingerVPC-2016-05-06-01",
        "log_group_name": "ProdPingerVPC",
        "vpc_cidr_block": "10.0.0.0/20",
        "subnet_cidr_block": "10.0.0.0/24",
        "availability_zone": "us-west-2a",
        "instance_tenancy": "default"
    },
    "iam_config": {
        "users": {
            "pinger": {
                "inline_policies": [
                    {
                        "policy": {
                            "Version": "2012-10-17", 
                            "Statement": [
                                {
                                    "Action": [
                                        "s3:PutObject"
                                    ], 
                                    "Resource": [
                                        "arn:aws:s3:::9c7574a2-544f-447e-962b-3661a595f971-prod-pinger/*"
                                    ], 
                                    "Effect": "Allow", 
                                    "Sid": "Stmt1426990618000"
                                }, 
                                {
                                    "Action": [
                                        "cognito-identity:DescribeIdentity", 
                                        "cognito-identity:ListIdentities"
                                    ], 
                                    "Resource": [
                                        "arn:aws:cognito-identity:us-east-1::identitypool/"
                                    ], 
                                    "Effect": "Allow", 
                                    "Sid": "Stmt1426990755000"
                                }
                            ]
                        }
                    }
                ]
            }, 
            "pinger_cloudwatch": {
                "inline_policies": [
                    {
                        "policy": {
                            "Version": "2012-10-17", 
                            "Statement": [
                                {
                                    "Action": [
                                        "logs:*"
                                    ], 
                                    "Resource": [
                                        "arn:aws:logs:*:*:*"
                                    ], 
                                    "Effect": "Allow"
                                }
                            ]
                        }
                    }
                ]
            }, 
            "pinger_boot": {
                "inline_policies": [
                    {
                        "policy": {
                            "Version": "2012-10-17", 
                            "Statement": [
                                {
                                    "Action": [
                                        "s3:Get*", 
                                        "s3:List*"
                                    ], 
                                    "Resource": [
                                        "arn:aws:s3:::nachoprodconf/prodpinger/*"
                                    ], 
                                    "Effect": "Allow"
                                }, 
                                {
                                    "Action": [
                                        "s3:ListBucket"
                                    ], 
                                    "Resource": [
                                        "arn:aws:s3:::nachoprodconf"
                                    ], 
                                    "Effect": "Allow", 
                                    "Condition": {
                                        "StringLike": {
                                            "s3:prefix": [
                                                "prodpinger/*"
                                            ]
                                        }
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        }
    },
    "s3_config": {
          "s3_bucket": "nachoprodconf",
          "bucket_prefix_key": "prodpinger",
          "pinger_bucket_key": "pinger",
          "s3_filenames": {
              "certs_pem": "prodDC.crt",
              "pinger_config": "pingerv2.cfg"
          }
    },
    "elb_config": {
        "ports": [
            [443, 8443, "https", "https", "arn:aws:iam:::server-certificate/ProdPinger"]
        ],
        "health_check": {
            "interval" :20,
            "healthy_threshold": 3,
            "unhealthy_threshold": 5,
            "target": "HTTPS:8443/1/alive?token="
        },
      "elb_port": 443,
      "backend_port": 8443,
      "accesslog_bucket_name": "elblogs-nm-prod",
      "sg_config": {
            "name" : "ELB",
            "description": "The SG for Prod Pinger ELB",
            "ingress-rules": [
              {
                "protocol": "tcp",
                "from_port": 443,
                "to_port": 443,
                "cidr_ip": "0.0.0.0/0"
              }
            ],
            "egress-rules": [
            ]
        }
    },
    "autoscale_config": {
        "ami_id": "ami-78768418",
        "key_pair": "ProdPinger",
        "instance_type": "m3.medium",
        "instance_monitoring": false,
        "min_size": 1,
        "max_size": 1,
        "sg_config": {
            "name" : "ASIns",
            "description": "The SG for Prod Pinger AS - Instance",
            "ingress-rules": [
                {
                  "protocol": "tcp",
                  "from_port": 8443,
                  "to_port": 8443,
                  "cidr_ip": "0.0.0.0/0"
                },
                {
                    "protocol": "tcp",
                    "from_port": 22,
                    "to_port": 22,
                    "cidr_ip": "xx.xx.xx.xx/32"
                }
            ],
            "egress-rules": [
              {
                "protocol": "tcp",
                "from_port": 443,
                "to_port": 443,
                "cidr_ip": "0.0.0.0/0"
              },
              {
                "protocol": "tcp",
                "from_port": 2195,
                "to_port": 2195,
                "cidr_ip": "17.0.0.0/8"
              },
              {
                "protocol": "tcp",
                "from_port": 2196,
                "to_port": 2196,
                "cidr_ip": "17.0.0.0/8"
              },
              {
                "protocol": "tcp",
                "from_port": 123,
                "to_port": 123,
                "cidr_ip": "0.0.0.0/0"
              },
              {
                "protocol": "udp",
                "from_port": 123,
                "to_port": 123,
                "cidr_ip": "0.0.0.0/0"
              },
              {
                "protocol": "tcp",
                "from_port": 80,
                "to_port": 80,
                "cidr_ip": "0.0.0.0/0"
              },
              {
                "protocol": "tcp",
                "from_port": 993,
                "to_port": 993,
                "cidr_ip": "0.0.0.0/0"
              }
            ]
        }
    }
}
